<div class="header">
  <div class="am-g">
    <h1>狗猫熊登陆</h1>
  </div>
</div>
<div class="am-g">
  <div class="am-u-lg-4 am-u-md-8 am-u-sm-centered">
    <form method="post" class="am-form">
	  <input type="hidden" name="action" value="LoginAction"/>
      <label for="text">用户名:</label>
      <input type="text" name="user_name" id="user_name" value="" placeholder="你的用户名是啥？">
      <br>
      <label for="password">密码:</label>
      <input type="password" name="password" id="password" value="" placeholder="密码哦！">
      <br>
      <label for="remember-me">
        <input id="remember-me" name="remember_me" id="remember_me" type="checkbox">
        记住密码
      </label>
      <br />
	  #if($msg)
	  <div class="am-alert am-alert-danger">
		<strong>$msg</strong>
	  </div>
	  #end
      <div class="am-cf">
		<input type="hidden" name="event_submit_do_login" value="event_submit_do_login"/>
        <input type="submit" name="" value="登 录" class="am-btn am-btn-primary am-btn-sm am-fl">
      </div>
    </form>
  </div>
</div>